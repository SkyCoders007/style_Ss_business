<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_controller_add_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splace_screen_bg"
    android:orientation="vertical"
    tools:context=".Activities.AddStyles">


    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back_list_styles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@mipmap/back"/>
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="10dp"
            android:src="@mipmap/style_swiper"/>
    </RelativeLayout>
<!--

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center_horizontal|bottom">

        <ImageView
            android:id="@+id/iv_app_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:layout_gravity="bottom"
            android:src="@mipmap/style_swiper"/>
    </LinearLayout>
-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <mxi.com.styleswiperbusiness.widget.MyTextView
                android:id="@+id/tv_gender_add_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border_linear_bg"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:text="Male"
                android:padding="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <mxi.com.styleswiperbusiness.widget.MyTextView
                android:id="@+id/tv_color_add_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_border_linear_bg"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:text="Brunette"
                android:padding="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <mxi.com.styleswiperbusiness.widget.MyTextView
                android:id="@+id/tv_style_add_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_border_linear_bg"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:text="Straight"
                android:padding="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <mxi.com.styleswiperbusiness.widget.MyTextView
                android:id="@+id/tv_length_add_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_border_linear_bg"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:text="Short"
                android:padding="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <mxi.com.styleswiperbusiness.widget.MyEditText
                android:id="@+id/et_cost_add_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_border_linear_bg"
                android:hint="Cost"
                android:padding="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_border_linear_bg"
                android:orientation="horizontal"
                android:padding="10dp">

                <mxi.com.styleswiperbusiness.widget.MyTextView
                    android:id="@+id/tv_image_button_add_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/my_button_bg"
                    android:padding="10dp"
                    android:text="Image"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/iv_selected_image_add_style"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/no_media" />
            </RelativeLayout>

            <mxi.com.styleswiperbusiness.widget.MyTextView
                android:id="@+id/tv_save_add_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/my_button_bg"
                android:gravity="center"
                android:padding="12dp"
                android:text="Save"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
